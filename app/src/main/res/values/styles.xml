<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextAppearance.AppCompat.Headline.Quote">
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="TextAppearance.AppCompat.Headline.Quote.Text">
    <item name="android:textSize">@dimen/quote_size</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="TextAppearance.AppCompat.Headline.Quote.Author">
    <item name="android:textStyle">italic</item>
    <item name="android:textAlignment">viewEnd</item>
  </style>

  <style name="ListQuoteText" parent="TextAppearance.AppCompat.Title">
    <item name="android:includeFontPadding">false</item>
    <item name="android:textAlignment">viewStart</item>
  </style>

  <style name="ListQuoteAuthor" parent="TextAppearance.AppCompat.Subhead">
    <item name="android:includeFontPadding">false</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textAlignment">viewEnd</item>
  </style>

</resources>